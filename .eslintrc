{
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react"
  ],
  "plugins": [
    "jest"
  ],
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "env": {
    "jest": true,
    "es6": true,
    "node": true
  },
  "rules": {
    "import/prefer-default-export": "off",
    "import/first": "off",
    "class-methods-use-this": "off",
    "arrow-body-style": "off",
    "global-require": "off",
    "no-use-before-define": "off",
    "no-underscore-dangle": "off",
    "semi": [
      "error",
      "never"
    ],
    "no-console": "error",
    "no-return-await": "off",
    "func-names": "off",
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ]
  },
  "globals": {
    "Blob": true,
    "document": true,
    "URL": true,
    "window": true
  }
}